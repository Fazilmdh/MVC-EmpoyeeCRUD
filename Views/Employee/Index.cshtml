@model IEnumerable<EmployeeMVCCRUD.Models.EMPLOYEE>

@{
    ViewBag.Title = "Index";
}

<h2>Employee Registration</h2>

<br />

<p>
    <a href="@Url.Action("Create","Employee")" class="btn btn-default"><i class="fa fa-plus"></i> Create New</a>
</p>

<table class="table table-striped">
    <thead class="table-heading">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Employee", new { id = item.ID})" class="btn btn-default"><i class="fa fa-pencil"></i>  Edit</a>
                <a href="@Url.Action("Delete", "Employee", new { id = item.ID})" class="btn btn-default"><i class="fa fa-trash"></i>  Delete</a>

            </td>
        </tr>
    }

</table>


@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        

    </script>
}